    <div class="farm-buttons" >
      <% @farms.shuffle.each do |farm| %>
          <div class="farm-details small-3 centered columns">
            <%= link_to "#{farm.name}", farm_path(farm), class: "registration-form button round tiny" %><br>
        </div>
      <% end %>
  </div>
</div>
