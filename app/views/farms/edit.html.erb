<div class="left-sideshow small-1 medium-2 large-3 centered columns">
  <h1> </h1>
</div>
<div class="registration-form small-10 medium-8 large-6 centered columns">

<h1 class="sub-header">Update your farm information!</h1>
<div class="farm-update-form small-5 centered columns">
  <%= form_for @farm, as: :farm, url: user_farm_path(@user.id, @farm), method: :patch do |f| %>
    <div class="field column small-12">
      <% f.label :name, class: "text-input-label" %><br>
      <%= f.text_field :name, class: "text-input-field", placeholder: "Grub Worm Farms" %>
    </div>
    <div class="field column small-12">
      <% f.label :email, class: "text-input-label" %><br>
      <%= f.email_field :email, class: "text-input-field", placeholder: "contact email" %>
    </div>
    <div class="field column small-12">
      <% f.label :phone, class: "text-input-label" %><br>
      <%= f.text_field :phone, class: "text-input-field", placeholder: "phone like this - 1112223333"%>
    </div>
    <div class="field column small-12">
      <% f.label :address, class: "text-input-label" %><br>
      <%= f.text_field :address, class: "text-input-field", placeholder: "Address" %>
    </div>
    <div class="field column small-12">
      <% f.label :city, "City", class: "text-input-label" %><br>
      <%= f.text_field :city, class: "text-input-field", placeholder: "City" %>
    </div>
    <br>
    <div class="field column small-12">
      <% f.label :state, "State", class: "text-input-label" %><br>
      <%= f.text_field :state, class: "text-input-field", placeholder: "State (like this - NC)" %>
    </div>
    <br>
    <div class="field column small-12">
      <% f.label :zip, "Zip Code", class: "text-input-label" %><br>
      <%= f.text_field :zip, class: "text-input-field", placeholder: "zip code" %>
    </div>
    <br>
  <div class="actions">
    <%= f.submit "Update your Farm!", class: "market button  round tiny" %>
  </div>
  <% end %>
  <%= button_to "Back to #{@farm.name}!", farm_path(@farm), class: 'market button  round tiny', method: :get %>
  <%= button_to "Back to home", farms_path, class: "market button  round tiny", method: :get %>
  </div>
</div>
<div class="left-sideshow small-1 medium-2 large-3 centered columns">
</div>
