  <style type="text/css">
    html, body { height: 100%; margin: 0; padding: 0; }
    #farm-map { height: 40%; }
  </style>
<div class="farm-title">
  <h1><%= @farm.name %></h1>
</div>
<div class="farm-info">
<%= @farm.email %><br>
<%= @farm.address %><br>
<%= @farm.city %>,
<%= @farm.state %>
<%= @farm.zip %>
<%= @farm.latitude %>
<%= @farm.longitude %>
</div>
<div class="row">
  <!-- <script async defer
    src="https://maps.googleapis.com/maps/api/js?<%key=["GOOGLE_MAPS_API_KEY"]%>&callback=initMap">
  </script> -->
  <div class="farm-info small-8 small centered columns">
    <div id="farm-map"
      data-farm=<%= @farm.name %>
      data-lat=<%= @farm.latitude %>
      data-lng=<%= @farm.longitude %> >
    </div>
  </div>
</div>

<% if current_user == @user %>
  <%= button_to "Update Information", edit_user_farm_path(@user, @farm), class: 'farm-buttons button expand round meduim', method: :get %>
<% end %>
