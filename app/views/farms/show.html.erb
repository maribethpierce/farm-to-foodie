  <style type="text/css">
    html, body { height: 100%; margin: 0; padding: 0; }
    #map { height: 40%; }
  </style>
<div class="farm-title">
  <h1><%= @farm.name %></h1>
</div>
<div class="farm-info">
<%= @farm.email %><br>
<%= @farm.address %><br>
<%= @farm.city %>,
<%= @farm.state %>
<%= @farm.zip %>
</div>
<div id="map"></div>
  <script type="text/javascript">
    var map;
    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        center: {lat: -34.397, lng: 150.644},
        zoom: 8
      });
    }
  </script>
  <script async defer
    src="https://maps.googleapis.com/maps/api/js?<%key=["GOOGLEMAPSAPIKEY"]%>&callback=initMap">
  </script>
<% if current_user == @user %>
  <%= button_to "Update Information", edit_user_farm_path(@user, @farm), class: 'farm-buttons button expand round meduim', method: :get %>
<% end %>
