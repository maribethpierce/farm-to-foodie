<div class="farm-title">
  <h1><%= @farm.name %></h1>
</div>
<div class="farm-info">
<%= @farm.email %><br>
<%= @farm.address %><br>
<%= @farm.city %>,
<%= @farm.state %>
<%= @farm.zip %>
</div>
<% if current_user == @user %>
  <%= button_to "Update Information", edit_user_farm_path(@user, @farm), class: 'farm-buttons button expand round meduim', method: :get %>
<% end %>
